<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="row w-100">
    <div class="col-md-6 d-flex flex-column justify-content-center">
      <h2 class="display-5">ようこそ！</h2>
      <p class="lead">RuleMasterはルール管理を効率化するアプリケーションです</p>
    </div>
    
    <div class="col-md-6 d-flex justify-content-center">
      <div class="w-75">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-group">
            <%= f.label :username, t('activerecord.attributes.user.username') %>
            <%= f.text_field :username, class: "form-control", autofocus: true, style: "max-width: 300px;", placeholder: "例) 中村正明"%>
          </div>

          <br>

          <div class="form-group">
            <%= f.label :password, t('activerecord.attributes.user.password') %>
            <%= f.password_field :password, class: "form-control", autocomplete: "current-password", style: "max-width: 300px;" , placeholder: "6文字以上必要です"%>
          </div>
          
          <br>

          <div class="form-group">
            <%= f.submit t('devise.sessions.new.sign_in'), class: "btn btn-primary" %>
          </div>
        <% end %>
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
