<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="row w-100">
    <div class="col-md-5 d-flex flex-column justify-content-center">
      <h2 class="display-5">ようこそ！</h2>
      <p class="lead">RuleMasterはルール管理を効率化するアプリケーションです</p>
    </div>

    <div class="col-md-7 d-flex justify-content-center">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        
        <% flash.each do |key, message| %>
          <div class="alert alert-<%= key %>"><%= message %></div>
        <% end %>

        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="field">
          <%= f.label :username %><br />
          <%= f.text_field :username, class: "form-control", autofocus: true, style: "max-width: 300px;" %>
        </div>

        <div class="field">
          <%= f.label :team_names, "所属チーム" %><br />
          <div class="row">
            <%= f.collection_check_boxes :team_name_ids, TeamName.all, :id, :name do |b| %>
              <div class="col-md-4">
                <div class="form-check">
                  <%= b.check_box class: 'form-check-input' %>
                  <%= b.label class: 'form-check-label' %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "form-control", style: "max-width: 300px;" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control", style: "max-width: 300px;", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class: "form-control", style: "max-width: 300px;", autocomplete: "new-password" %>
        </div>
        
        <br>
        
        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>

        <%= render "devise/shared/links" %>
        
      <% end %>
    </div>
  </div>
</div>
